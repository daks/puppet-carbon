#!/etc/init/carbon-relay-<%= @name %>.conf
description	"Carbon relay server"
 
start on filesystem or runlevel [2345]
stop on runlevel [!2345]
 
env CARBON_RELAY=/opt/graphite/bin/carbon-relay.py

kill timeout 20

umask 022
respawn
 
chdir /opt/graphite
 
exec $CARBON_RELAY --instance <%= @name %> --debug start
